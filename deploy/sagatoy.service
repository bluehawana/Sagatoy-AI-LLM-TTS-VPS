[Unit]
Description=Sagatoyai FastAPI Backend
After=network.target

[Service]
Type=simple
User=harvard
Group=harvard
WorkingDirectory=/var/www/sagatoy/backend/src

# Environment variables
Environment="PATH=/var/www/sagatoy/venv/bin"
EnvironmentFile=-/var/www/sagatoy/backend/.env

# Start command
ExecStart=/var/www/sagatoy/venv/bin/uvicorn sagatoyai.main:app \
    --host 0.0.0.0 \
    --port 8000 \
    --workers 1 \
    --log-level info

# Restart policy
Restart=always
RestartSec=10

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/www/sagatoy

# Resource limits
LimitNOFILE=65536
LimitNPROC=4096

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=sagatoy

[Install]
WantedBy=multi-user.target
